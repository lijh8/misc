{
  "accessibility.verbosity.diffEditor": false,
  "breadcrumbs.enabled": false,
  "breadcrumbs.icons": false,
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.clang_format_fallbackStyle": "none",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17",
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/src/foo",
  ],
  "C_Cpp.dimInactiveRegions": false,
  "C_Cpp.errorSquiggles": "Disabled",
  // "C_Cpp.formatting": "clangFormat",
  "C_Cpp.formatting": "none",
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "chat.disableAIFeatures": true,
  "chat.mcp.access": "none",
  "clangd.arguments": [
    // "--background-index",
    // "--compile-commands-dir=/path/to/compile_commands/", // path to compile_commands.json,
    // "--fallback-style=none", // https://clang.llvm.org/docs/ClangFormat.html ,
    // "--header-insertion=never",
  ],
  "clangd.fallbackFlags": [
    "-std=c++2a", // all with this: .clangd, compile_commands.json, compile_flags.txt
    "-DNGLOG_USE_EXPORT", // CPPFLAGS += -DNGLOG_USE_EXPORT
    "-I../foo",
    "-I${workspaceFolder}/src/foo",
    "-I/home/ljh/Downloads/boost_1_86_0/",
    "-I/home/ljh/Downloads/asio-1.30.2/include",
    "-I/home/ljh/Downloads/ng-log-0.8.2/src",
    "-I/home/ljh/Downloads/ng-log-0.8.2/build",
    "-I/home/ljh/Downloads/utfcpp-4.0.5/source",
  ],
  "clangd.semanticHighlighting": false,
  "debug.internalConsoleOptions": "neverOpen",
  "debug.onTaskErrors": "abort",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.terminal.clearBeforeReusing": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.maxComputationTime": 0,
  "diffEditor.renderGutterMenu": false,
  "diffEditor.renderIndicators": false,
  "diffEditor.renderMarginRevertIcon": false,
  "editor.accessibilitySupport": "off",
  "editor.codeLens": false,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.dragAndDrop": false,
  "editor.folding": false,
  "editor.fontSize": 15,
  "editor.formatOnSave": true, // formatOnPaste conflicts with SortIncludes
  "editor.hover.enabled": false,
  "editor.inlayHints.enabled": "off",
  "editor.lightbulb.enabled": "off",
  // "editor.lineNumbers": "off", //
  "editor.links": false,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": "off",
  },
  "editor.renderLineHighlight": "all",
  "editor.roundedSelection": false,
  "editor.rulers": [
    80,
  ],
  "editor.semanticHighlighting.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.suggest.showIcons": false,
  // "editor.wordWrap": "wordWrapColumn", //
  "editor.wordWrapColumn": 80, // clang-format, LLVM, C++, ColumnLimit
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.sortOrder": "alphabetical",
  "extensions.ignoreRecommendations": true,
  "files.exclude": {
    "**/*.d": true,
    "**/*.o": true,
  },
  "files.insertFinalNewline": true,
  "files.restoreUndoStack": false,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.ignoreRebaseWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.chat.agent.autoFix": false,
  "github.copilot.chat.agent.runTasks": false,
  "github.copilot.chat.copilotDebugCommand.enabled": false,
  "github.copilot.chat.startDebugging.enabled": false,
  "github.copilot.editor.enableCodeActions": false,
  "github.copilot.enable": {
    "*": false,
  },
  "github.copilot.nextEditSuggestions.enabled": false,
  "github.copilot.nextEditSuggestions.fixes": false,
  "go.enableCodeLens": {
    "references": false,
    "runtest": false,
  },
  "go.testExplorer.enable": false,
  "go.toolsEnvVars": {
    "LD_LIBRARY_PATH": "/path/to/lib",
  },
  "http.proxySupport": "off",
  "inlineChat.lineNaturalLanguageHint": false,
  "lldb.evaluateForHovers": false,
  "lldb.launch.env": { // env variables in launch.json override variables with same name here
    "LD_LIBRARY_PATH": "$LD_LIBRARY_PATH:${workspaceFolder}/src/foo:/home/ljh/Downloads/ng-log-0.8.2/build",
    "NGLOG_alsologtostderr": "1", // ng-log is successor to Google's glog
  },
  "mojo.lsp.includeDirs": [
    "${workspaceFolder}/src",
  ],
  "outline.icons": false,
  "outline.showTypeParameters": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8",
  },
  "python.analysis.extraPaths": [
    "${workspaceFolder}",
    "${workspaceFolder}/src",
  ],
  "python.analysis.inlayHints.functionReturnTypes": false,
  "python.analysis.inlayHints.pytestParameters": false,
  "python.analysis.inlayHints.variableTypes": false,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./src/main", // -s: directory to test files
    "-p",
    "test_*.py" // -p: pattern to test files
  ],
  "python.testing.unittestEnabled": true,
  "rust-analyzer.completion.autoimport.enable": false,
  "rust-analyzer.completion.autoself.enable": false,
  "rust-analyzer.completion.callable.snippets": "none",
  "rust-analyzer.completion.postfix.enable": false,
  "rust-analyzer.hover.actions.enable": false,
  "rust-analyzer.hover.documentation.enable": false,
  "rust-analyzer.hover.links.enable": false,
  "rust-analyzer.hover.memoryLayout.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.renderColons": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.lens.enable": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.initialHint": false,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.stickyScroll.enabled": false,
  "vim.hlsearch": true,
  "vim.overrideCopy": false,
  "vim.wrapscan": false,
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.title": "${activeEditorLong}",
  "window.zoomPerWindow": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.languageDetection": false,
  "workbench.editor.showIcons": false,
  "workbench.editor.tabSizing": "fixed",
  "workbench.iconTheme": null,
  "workbench.layoutControl.type": "toggles",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.settings.editor": "json", // "json", "ui",
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.enableStickyScroll": false,
}
