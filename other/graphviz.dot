// example.dot

digraph {
  start -> input -> check;

  check -> foo [label=foo]
  check -> err [label=err]
  check -> finish [label=no]
  check -> bar [label=bar]

  foo -> finish
  err -> finish
  bar -> finish

  conf -> bar
  deps -> bar
  bar -> output

  bar [label="do something"]

  label = "flow chart"
}
