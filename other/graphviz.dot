// example.dot

digraph {
  start -> input -> check;

  check -> foo [label=foo]
  foo -> finish

  check -> err [label=err]
  err -> finish

  check -> finish [label=no]

  check -> bar [label=bar]
  bar -> finish

  conf -> bar -> output
  deps -> bar

  bar [label="do something"]

  label = "flow chart"
}
